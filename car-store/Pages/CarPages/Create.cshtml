@page
@model CarStore.Pages.CarPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Photo</label>
                <input type=file asp-for="ImageUpload" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Car.Name" class="control-label"></label>
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.BrandName" class="control-label"></label>
                <input asp-for="Car.BrandName" class="form-control" />
                <span asp-validation-for="Car.BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ModelYear" class="control-label"></label>
                <input asp-for="Car.ModelYear" class="form-control" />
                <span asp-validation-for="Car.ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Color" class="control-label"></label>
                <input asp-for="Car.Color" class="form-control" />
                <span asp-validation-for="Car.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-check-label">Type: </label>
                <select asp-for="Car.CarType.CarTypeID" asp-items="Model.CarTypeList" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="CarList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
