@page
@model CarStore.Pages.CarPages.DetailsModel

@{
    ViewData["Title"] = "Details";
    string imageURL = "https://" + Request.Host.Value + "/photos/" + Model.Car.ImageName;
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <img class="mw-100" src="@imageURL" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.BrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarType.TypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarType.TypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Car?.CarID">Edit</a> |
    <a asp-page="./CarList">Back to List</a>
</div>
