@page
@model INET2005_FinalProject.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
    string imageURL = "https://" + Request.Host.Value + "/photos/" + Model.Car.ImageName;
}
<div class="row align-items-center">
    <div class="col-md-6">
        <img class="img-fluid" src="@imageURL" />
    </div>
    <div class="col-md-6">
        <h1>@Model.Car.ModelYear @Model.Car.BrandName @Model.Car.Name</h1>
        <dl>
            <dt class="col-sm-2">
                Type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.CarType.TypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Car.Color)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Color)
            </dd>
        </dl>
        <h3><b>$@Model.Car.Price.ToString("N")</b></h3>
        <form method="post">
            <input type="hidden" asp-for="Car.CarID" />
            <input type="hidden" asp-for="Car.Name" />
            <input type="submit" value="Add to Cart" class="btn btn-lg btn-outline-success" />
        </form>
    </div>
</div>
<div class="my-5 d-flex justify-content-center">
    <a class="btn btn-outline-secondary text-center" href="./Index">Continue Shopping</a>
</div>

